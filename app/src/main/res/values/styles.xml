<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv_text_header">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="tv_text_semi_header">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="tv_text_normal">
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="style_tweet_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">start</item>
        <item name="android:minLines">10</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textColorHint">@color/color_edit_text_hint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="style_primary_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_primary_btn_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="style_red_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_red_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_green_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/_6sdp</item>
        <item name="android:background">@drawable/bg_green_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>